<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/fragment_a_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我是AFragment"
        android:textSize="50px"/>
    <Button
        android:id="@+id/fragment_a_btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换文字"
        android:textSize="50px"/>

    <Button
        android:id="@+id/fragment_a_btn_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更换Fragment"
        android:textAllCaps="false"
        android:textSize="50px" />
    <Button
        android:id="@+id/fragment_a_btn_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="给Activity传递消息"
        android:textAllCaps="false"
        android:textSize="50px" />
</LinearLayout>