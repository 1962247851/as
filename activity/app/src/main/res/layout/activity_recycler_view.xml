<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/rv_btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LinearRecyclerView"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rv_btn_linearr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LinearRecyclerVieww"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rv_btnGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GridRecyclerView"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/rv_btnStagger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="StaggerRecyclerView"
        android:textAllCaps="false"
        android:textSize="20sp" />
</LinearLayout>