<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DialogActivity">

    <Button
        android:id="@+id/btnNormalDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NormalDialog"
        android:textAllCaps="false"
        android:textSize="50px" />

    <Button
        android:id="@+id/btnSingleDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SingleDialog"
        android:textAllCaps="false"
        android:textSize="50px" />

    <Button
        android:id="@+id/btnMultiDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MultiDialog"
        android:textAllCaps="false"
        android:textSize="50px" />

    <Button
        android:id="@+id/btnProgressDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressDialog"
        android:textAllCaps="false"
        android:textSize="50px" />

    <Button
        android:id="@+id/btnCustomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CustomDialog"
        android:textAllCaps="false"
        android:textSize="50px" />
    <Button
        android:id="@+id/btnInputDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="InputDialog"
        android:textAllCaps="false"
        android:textSize="50px" />
</LinearLayout>